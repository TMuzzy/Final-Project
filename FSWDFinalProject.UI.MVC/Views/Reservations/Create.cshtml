@model FSWDFinalProject.DATA.EF.Reservation

@{
    ViewBag.Title = "Add New Reservation";
}

<h2 class="padme"></h2>


<div class="container justify-content-center border1" style="margin-bottom: 1.5em;">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <h2 class="text-center" style="padding-top: 0.5em;">@ViewBag.Title</h2>
        <div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row" style="padding-top: 1.5em;">
                <div class="col-md-4" style="text-align: right;">
                    @Html.LabelFor(model => model.OwnerAssetID, "Event", htmlAttributes: new { @class = "" })
                </div>
                <div class="col-md-6">
                    @Html.DropDownList("OwnerAssetID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.OwnerAssetID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row" style="padding-top: .5em;">
                <div class="col-md-4" style="text-align: right;">
                    @Html.LabelFor(model => model.LocationID, "Location", htmlAttributes: new { @class = "" })
                </div>
                <div class="col-md-6">
                    @Html.DropDownList("LocationID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.LocationID, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="row" style="padding-top: .5em;">
                <div class="col-md-4" style="text-align: right;">
                    @Html.LabelFor(model => model.ReservationDate, htmlAttributes: new { @class = "" })
                </div>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.ReservationDate, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ReservationDate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row" style="padding-top: .5em;">
                <div class="col-md-4" style="text-align: right;">
                    @Html.LabelFor(model => model.RoomID, "Room", htmlAttributes: new { @class = "" })
                </div>
                <div class="col-md-6">
                    @Html.DropDownList("RoomID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.RoomID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row button-styling">
                <div class="col-md-10" style="padding-left: 2.5em;">
                    <input type="submit" value="Add" class="btn btn-primary" />
                    @if (ViewBag.Error == 1)
                    {
                        @ViewBag.ErrorMessage
                    }
                </div>
                <div>
                    @Html.ActionLink("Back to List", "Index", "", new { @class = "btn btn-secondary" })
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
