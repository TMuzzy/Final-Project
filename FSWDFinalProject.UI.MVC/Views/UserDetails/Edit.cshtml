@model FSWDFinalProject.DATA.EF.UserDetail

@{
    ViewBag.Title = "Edit";
}

<h2 class="padme"></h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="container justify-content-center border1" style="margin-bottom: 2.95em;">

    <h2 class="text-center" style="padding-top: 0.5em;">@ViewBag.Title</h2>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.UserID)

    <div class="row" style="padding-top: .5em;">
        <div class="col-md-3" style="text-align: right;">
            @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "" })
        </div>
        <div class="col-md-8">
            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row" style="padding-top: .5em;">
        <div class="col-md-3" style="text-align: right;">
            @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "" })
        </div>
        <div class="col-md-8">
            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row button-styling">
        <div class="col-md-10" style="padding-left: 2.5em;">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
        <div>
            @Html.ActionLink("Back to List", "Index", "", new { @class = "btn btn-secondary" })
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
