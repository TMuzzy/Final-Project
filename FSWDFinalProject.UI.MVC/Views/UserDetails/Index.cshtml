@model IEnumerable<FSWDFinalProject.DATA.EF.UserDetail>

@{
    ViewBag.Title = "User Details";
}

<h2 class="padme"></h2>

<p>
    
</p>

<div class="container col-md-5 border1" style="margin-bottom: 1.5em;">
    <h2 style="padding-top: .5em;">@ViewBag.Title @Html.ActionLink("Add New User Details", "Create", "", new { @class = "btn btn-primary" })</h2>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.UserID }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Details", "Details", new { id = item.UserID }, new { @class = "btn btn-secondary" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.UserID }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</div>